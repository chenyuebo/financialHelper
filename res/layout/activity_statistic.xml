                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择开始日期"/>

        <DatePicker
                android:id="@+id/datePicker_start"
                android:layout_width="wrap_content"
                android:calendarViewShown="false"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择结束日期"/>

        <DatePicker
                android:id="@+id/datePicker_end"
                android:layout_width="wrap_content"
                android:calendarViewShown="false"
                android:layout_height="wrap_content"/>
